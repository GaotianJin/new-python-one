<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.sinosoft.core.domain.model.user">
	<class
		name="Role"
		table="role"
	>
		<meta attribute="sync-DAO">true</meta>
		<id
			name="Id"
			type="integer"
			column="id"
		>
			<generator class="native"/>
		</id>

		<property
			name="Rolecode"
			column="rolecode"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="Rolename"
			column="rolename"
			type="string"
			not-null="false"
			length="20"
		/>
	

		<set name="User2roles" inverse="true">
			<key column="role_id"/>
			<one-to-many class="User2role"/>
		</set>

		<set name="Role2privileges" inverse="true" lazy="true">
			<key column="role_id"/>
			<one-to-many class="Role2privilege"/>
		</set>


	</class>	
</hibernate-mapping>