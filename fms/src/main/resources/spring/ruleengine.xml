<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
	default-lazy-init="true">

	<bean id="ruleEngine" class="com.sinosoft.core.interfaces.ruleengine.RuleEngineFacade" init-method="init">
		<property name="ruleServiceProviderUrl">
			<value>http://drools.org/</value>
		</property>
		<property name="ruleServiceProviderImpl">
			<value>org.drools.jsr94.rules.RuleServiceProviderImpl</value>
		</property>
	</bean>
	<bean id="fibonacci" class="com.sinosoft.core.interfaces.ruleengine.Rule" init-method="init">
		<property name="ruleName">
			<value>fibonacci.drl</value>
		</property>
		<property name="engineFacade">
			<ref local="ruleEngine" />
		</property>
	</bean>

</beans>