<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eighth.dao.IRolesDao">
	<select id="getAllRole" resultType="com.eighth.entity.Roles">
		select * from roles 
		<where>
			<if test="roleName!=null">and RoleNAME like '%${roleName}%'</if>
		</where> limit #{page},#{rows}
	</select>
	<select id="getCountRoles" resultType="int">
		select count(9) from roles
	</select>
	<insert id="addRoles" parameterType="com.eighth.entity.Roles">
		insert into roles(RoleNAME) 
		values(#{roleName})
	</insert>
	<update id="updRoles" parameterType="com.eighth.entity.Roles">
		update roles set RoleName=#{roleName} where RoleId=#{roleId}
	</update>
	<delete id="delRoles">
		delete from roles where RoleId=#{roleId}
	</delete>
	<select id="selectRolesName" resultType="com.eighth.entity.Roles">
		select * from roles where RoleId=#{id}
	</select>
	<select id="selectRolesByName" resultType="int">
		select count(9) from roles where RoleNAME=#{0}
	</select>
</mapper>