<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.eighth.dao.IDynamicDao">
  	<!-- 查询所有数据行 -->
  	<select id="getCount" resultType="int">
  		select count(9) from dynamic where dyaskerId=#{dyaskerId}
  	</select>
  	<!-- 查询所有数据 -->
  	<select id="selectAll" resultType="com.eighth.entity.Dynamic">
  		select * from dynamic where dyaskerId=#{dyaskerId} order by dycreateTime desc limit #{page},#{rows} 
  	</select>
  	<!-- 查询未读数据行 -->
  	<select id="getNoCount" resultType="int">
  		select count(9) from dynamic where dyaskerId=#{dyaskerId} and dyisLook=0
  	</select>
  	<!-- 添加动态 -->
  	<insert id="insertDynamic" parameterType="com.eighth.entity.Dynamic">
  		insert into dynamic(dyaskerId,dyaskerName,dystuId,dystuName,dynamicContext) values(#{dyaskerId},#{dyaskerName},#{dystuId},#{dystuName},#{dynamicContext})
  	</insert>
  	<update id="updateDynamic">
  		update dynamic set dyisLook=1 where id=#{0}
  	</update>
  </mapper>