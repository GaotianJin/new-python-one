<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.eighth.dao.ISetWeightDao">
 	<select id="getAllAsker" resultType="com.eighth.entity.Askers">
 		select * from askers
 	</select>
 	<update id="updateAskers" parameterType="com.eighth.entity.Askers">
 		update askers set Weight=#{weight},bakContent=#{bakContent} where askerId=#{askerId}
 	</update>
 	<insert id="insertAskers" parameterType="com.eighth.entity.Askers">
 		insert into askers(AskerId,AskerName) values(#{askerId},#{askerName})
 	</insert>
 	<delete id="deleteAskers">
 		delete from askers where AskerId=#{id}
 	</delete>
 	<select id="getCountAsker" resultType="int">
 		select count(*) from askers
 	</select>
 </mapper>